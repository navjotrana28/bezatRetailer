<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:editTextColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/default_size</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:dialogTheme">@style/DialogTheme</item>
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:textColorAlertDialogListItem">@color/colorPrimary</item>
    </style>
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="dialogCornerRadius">@dimen/default_margin</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertButton</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/muli_regular</item>
    </style>
    <style name="DialogTheme" parent = "Theme.AppCompat.Light.Dialog">
        <item name="dialogCornerRadius">@dimen/default_margin</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/muli_regular</item>
    </style>
    <style name="AlertButton" parent="Base.Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="HomePageTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/default_size</item>
        <item name="dialogCornerRadius">@dimen/default_margin</item>
        <item name="android:fontFamily">@font/muli_regular</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>
    <style name="opposite" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryTrans</item>

    </style>
    <style name="field">
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textColorHint">@color/colorPrimaryTrans</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>
    <style name="aa" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:textColorHint">@color/colorPrimaryTrans</item>
        <item name="android:textSize">10sp</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
