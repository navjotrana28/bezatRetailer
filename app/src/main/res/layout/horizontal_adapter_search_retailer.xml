<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="90dp"
		android:layout_height="wrap_content">
	<ImageView
			android:id="@+id/image_horizontal"
			android:layout_width="wrap_content"
			android:layout_height="70dp"
			android:src="@drawable/bezat_contact_logo"
			app:layout_constraintBottom_toTopOf="@+id/text_horizontal"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"/>
	<TextView
			android:id="@+id/text_horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Saloon &amp; Spa"
			android:textAlignment="center"
			android:textColor="@color/black"
			android:layout_marginBottom="10dp"
			android:textSize="10sp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/image_horizontal"
	/>
</androidx.constraintlayout.widget.ConstraintLayout>