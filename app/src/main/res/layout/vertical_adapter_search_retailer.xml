<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
>

	<androidx.cardview.widget.CardView
			android:id="@+id/search_vertical_card_view"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:cardBackgroundColor="@color/white"
			android:layout_marginBottom="20dp"
			android:elevation="5dp"
			app:cardElevation="@dimen/card_elevation"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent">

		<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

			<ImageView
					android:id="@+id/image_horizontal"
					android:layout_width="match_parent"
					android:layout_height="@dimen/_120sdp"
					android:src="@drawable/bezat_contact_logo"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent"/>
			<TextView
					android:id="@+id/text_horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom"
					android:layout_margin="8dp"
					android:fontFamily="sans-serif"
					android:text="Saloon &amp; Spa"
					android:textAlignment="center"
					android:textColor="@color/colorPrimary"
					android:textSize="12sp"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/image_horizontal"

			/>

		</androidx.constraintlayout.widget.ConstraintLayout>

	</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>