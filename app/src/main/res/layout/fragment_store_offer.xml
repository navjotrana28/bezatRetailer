<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".activities.Notifications">
    <Toolbar
            android:id="@+id/topImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetEnd="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_28sdp"
                    android:src="@mipmap/ic_back" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/tajawal_bold"
                android:gravity="center"
                android:text="@string/offers"
                android:textSize="@dimen/_14sdp" />


        </RelativeLayout>
    </Toolbar>

    <LinearLayout
            android:id="@+id/wholeStorelayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
        android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topImage">

        <ImageView
                android:id="@+id/imgBanner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_148sdp"
                android:scaleType="fitXY"
                android:src="@color/colorPrimary"/>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="@dimen/_7sdp"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="@dimen/_1sdp">
            <TextView
                    android:id="@+id/txtStoreName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dessange"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/tajawal_medium"
                    android:textSize="@dimen/_14sdp"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/txtPhone"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:backgroundTint="@color/partnerline"
                android:background="@drawable/ic_phone"/>
            <ImageButton
                android:id="@+id/txtLoc"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_15sdp"

                android:backgroundTint="@color/partnerline"
                android:background="@drawable/ic_location"/>

            <ImageButton
                android:id="@+id/txtWeb"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:backgroundTint="@color/partnerline"
                android:background="@drawable/ic_web"/>

            <ImageButton
                android:id="@+id/txtFb"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:backgroundTint="@color/partnerline"
                android:background="@drawable/ic_fb"/>
            <ImageButton
                android:id="@+id/txtInsta"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:backgroundTint="@color/partnerline"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@drawable/ic_insta"/>
            <ImageButton
                android:id="@+id/txtTwitter"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:backgroundTint="@color/partnerline"
                android:background="@drawable/ic_twitter"/>

            <ImageButton
                android:id="@+id/txtSnap"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:backgroundTint="@color/partnerline"
                android:background="@drawable/ic_snap"/>

        </LinearLayout>




        <LinearLayout

                android:padding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

            <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:id="@+id/tvDescrip"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. "/>


            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                >
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="25dp"
                        android:id="@+id/btnAllOffer"
                        android:layout_width="230dp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:baselineAligned="false">
                    <TextView
                        android:layout_gravity="center"
                        android:fontFamily="@font/tajawal_bold"
                        android:textColor="@color/white"
                        android:layout_margin="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/view_all_offers"
                        android:textSize="@dimen/_19sdp">

                    </TextView>
                </androidx.cardview.widget.CardView>
            </FrameLayout>


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>