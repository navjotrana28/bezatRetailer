<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/divider_grey"
		tools:context=".activities.ContactUs">
	<Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="@color/colorPrimary"
			android:contentInsetStart="0dp"
			android:contentInsetLeft="0dp"
			android:contentInsetEnd="0dp"
			android:contentInsetRight="0dp"
			app:contentInsetEnd="0dp"
			app:contentInsetLeft="0dp"
			app:contentInsetRight="0dp"
			app:contentInsetStart="0dp"
			app:layout_constraintTop_toTopOf="parent">
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:orientation="horizontal">
			<ImageView
					android:layout_width="wrap_content"
					android:layout_height="@dimen/_28sdp"
					android:src="@mipmap/ic_back"/>
			<TextView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:fontFamily="@font/muli_bold"
					android:gravity="start|center_vertical"
					android:text="@string/contact_us"
					android:textSize="@dimen/_14sdp"/>


		</LinearLayout>
	</Toolbar>

	<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/imgProfile"
			android:layout_width="140dp"
			android:layout_height="140dp"
			android:layout_marginTop="5dp"
			android:background="@color/white"
			android:scaleType="fitCenter"
			android:src="@drawable/maleicon"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginStart="30dp"
			android:layout_marginTop="10dp"
			android:layout_marginEnd="30dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/imgProfile">

		<EditText
				android:id="@+id/contact_name"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:background="@drawable/round_corners"
				android:hint="NAME:"
				android:paddingStart="15dp"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:textColorHint="@color/divider_grey"
				android:textSize="18sp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
		/>
		<EditText
				android:id="@+id/contact_email"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:background="@drawable/round_corners"
				android:hint="EMAIL:"
				android:paddingStart="15dp"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:textColorHint="@color/divider_grey"
				android:textSize="18sp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/contact_name"
		/>
		<EditText
				android:id="@+id/contact_comments"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:background="@drawable/round_corners"
				android:ems="10"
				android:gravity="start"
				android:hint="COMMENTS:"
				android:lines="3"
				android:maxLength="140"
				android:paddingStart="15dp"
				android:paddingTop="5dp"
				android:singleLine="false"
				android:textColorHint="@color/divider_grey"
				android:textSize="18sp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/contact_email"
		/>
		<Button
				android:id="@+id/contact_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"
				android:background="@drawable/round_edge_and_color_background"
				android:text="SEND"
				android:textColor="@color/white"
				android:textSize="16dp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/contact_comments"
				app:layout_goneMarginTop="10dp"
		/>
		<ImageView
				android:id="@+id/contact_dialer"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"
				android:src="@drawable/fb"
				app:layout_constraintEnd_toStartOf="@+id/contact_whattsApp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/contact_button"
		/>
		<ImageView
				android:id="@+id/contact_whattsApp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/fb"
				app:layout_constraintBottom_toBottomOf="@+id/contact_dialer"
				app:layout_constraintEnd_toStartOf="@+id/contact_insta"
				app:layout_constraintStart_toEndOf="@+id/contact_dialer"
				app:layout_constraintTop_toTopOf="@+id/contact_dialer"
		/>
		<ImageView
				android:id="@+id/contact_insta"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/fb"
				app:layout_constraintBottom_toBottomOf="@+id/contact_whattsApp"
				app:layout_constraintEnd_toStartOf="@+id/contact_snapchat"
				app:layout_constraintStart_toEndOf="@+id/contact_whattsApp"
				app:layout_constraintTop_toTopOf="@+id/contact_whattsApp"
		/>
		<ImageView
				android:id="@+id/contact_snapchat"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/fb"
				app:layout_constraintBottom_toBottomOf="@+id/contact_insta"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@+id/contact_insta"
				app:layout_constraintTop_toTopOf="@+id/contact_insta"
		/>
		<ImageView
				android:id="@+id/contact_twitter"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:src="@drawable/fb"
				app:layout_constraintEnd_toStartOf="@+id/contact_fb"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/contact_dialer"

		/>
		<ImageView
				android:id="@+id/contact_fb"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/fb"
				app:layout_constraintBottom_toBottomOf="@id/contact_twitter"
				app:layout_constraintEnd_toStartOf="@+id/contact_browser"
				app:layout_constraintStart_toEndOf="@+id/contact_twitter"
				app:layout_constraintTop_toTopOf="@+id/contact_twitter"
		/>
		<ImageView
				android:id="@+id/contact_browser"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/fb"
				app:layout_constraintBottom_toBottomOf="@id/contact_fb"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@+id/contact_fb"
				app:layout_constraintTop_toTopOf="@+id/contact_fb"/>


	</androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>