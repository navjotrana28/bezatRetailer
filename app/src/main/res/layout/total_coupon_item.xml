<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:background="@color/lightest_grey"
		android:orientation="horizontal"
		android:padding="@dimen/_4sdp">

	<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/imgCoupon"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_gravity="center"
			android:src="@drawable/restaurantdummy"
			app:civ_border_color="@color/colorPrimary"
			app:civ_border_width="2dp" />

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/_12sdp"
			android:orientation="vertical">

		<TextView
				android:id="@+id/txtStoreName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/muli_regular"
				android:text="Restaurant name"

				android:textColor="@color/colorPrimary"
				android:textSize="@dimen/_11sdp"
				android:visibility="gone" />

		<TextView
				android:id="@+id/txtBilldate"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/muli_regular"
				android:text="Date: 06/06/2018"
				android:textColor="@color/colorPrimary"
				android:textSize="@dimen/_11sdp"
				android:visibility="gone" />

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/_35sdp"
				android:orientation="horizontal">

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="@font/muli_bold"
					android:text="Available tickets "
					android:textColor="@color/colorPrimary"
					android:textSize="@dimen/_12sdp" />

			<TextView
					android:id="@+id/availTicket"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@color/colorPrimary"
					android:fontFamily="@font/muli_bold"
					android:paddingStart="@dimen/_7sdp"
					android:paddingTop="@dimen/_3sdp"
					android:paddingEnd="@dimen/_7sdp"
					android:paddingBottom="@dimen/_3sdp"
					android:text="CF 0905"
					android:textColor="@color/white"
					android:textSize="@dimen/_10sdp" />


		</LinearLayout>

		<TextView
				android:id="@+id/txtRaffles"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/muli_regular"
				android:text="Raffle:  BEZ121"
				android:textColor="@color/colorPrimary"
				android:textSize="@dimen/_12sdp"
				android:visibility="gone" />

	</LinearLayout>

</LinearLayout>
