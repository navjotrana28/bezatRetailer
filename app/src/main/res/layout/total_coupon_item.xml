<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
             android:layout_marginBottom="@dimen/_1sdp"
              android:background="@color/white"
              android:padding="@dimen/_10sdp">

    <ImageView
            android:id="@+id/imgCoupon"
            android:layout_width="@dimen/_96sdp"
            android:layout_height="@dimen/_96sdp"
            android:src="@drawable/restaurantdummy"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:id="@+id/txtStoreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant name"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/muli_regular"/>
        <TextView
                android:id="@+id/txtBilldate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: 06/06/2018"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/muli_regular"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">
            <TextView

                    android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
            android:text="@string/bill_no"
                    android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/muli_bold"
            android:textColor="@color/colorPrimary"/>

            <TextView
                    android:id="@+id/txtBillno"
                    android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_7sdp"
                    android:paddingEnd="@dimen/_7sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:text="CF 0905"
                    android:textColor="@color/white"
                    android:fontFamily="@font/muli_bold"
                    android:textSize="@dimen/_10sdp"
            android:background="#B36C4D"/>


        </LinearLayout>
        <TextView
                android:id="@+id/txtRaffles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raffle:  BEZ121"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/muli_regular"
                android:textColor="@color/colorPrimary"/>

    </LinearLayout>

</LinearLayout>
