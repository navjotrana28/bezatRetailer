<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        tools:context=".activities.ChooseLanguage">
<ImageView android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="1"
android:src="@drawable/app_logo"
android:scaleType="fitCenter"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/_25sdp"
    android:orientation="vertical"
   >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/_4sdp"
                android:padding="@dimen/_3sdp">

            <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:elevation="@dimen/_2sdp"
                    android:src="@drawable/bh_flag"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BAHRAIN"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14sdp"/>
        </LinearLayout>
       <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="@font/tajawal_regular"
               android:drawableTint="@color/white"
               android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
               android:textSize="@dimen/_14sdp"
               android:text="@string/select_language"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@color/white"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center_horizontal"
                android:orientation="vertical">
            <ImageButton
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_16sdp"

                    android:scaleType="fitXY"
                    android:background="@drawable/shape_bg_outgoing_bubble"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"

                        android:orientation="vertical"
                        android:background="@drawable/ripple_primary_white">

                    <TextView
                            android:id="@+id/txtEnglish"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="English"
                            android:padding="@dimen/_12sdp"
                            android:textColor="@color/black"/>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/cardview_shadow_start_color"/>
                    <TextView
                            android:id="@+id/txtArabic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="عربى"
                            android:gravity="end"
                            android:padding="@dimen/_12sdp"
                            android:textColor="@color/black"/>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@color/cardview_shadow_start_color"/>
                </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>