<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="@dimen/_10sdp"

        android:background="@color/navTrans">
    <ImageView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_menu_black_24dp"
            android:layout_marginBottom="@dimen/_10sdp"
    android:layout_gravity="start"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"

            android:orientation="horizontal">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AR"
                android:background="@color/colorPrimary"
                android:paddingStart="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:paddingTop="@dimen/_4sdp"
                android:fontFamily="@font/muli_bold"
                android:paddingEnd="@dimen/_5sdp"/>

        <LinearLayout
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:background="@color/langbg">
            <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/bahrainflag"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/white"
                    android:paddingStart="@dimen/_10sdp"
                    android:drawableTint="@color/colorPrimary"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:fontFamily="@font/muli_bold"
                    android:text="BAHRAIN"/>

        </LinearLayout>


    </LinearLayout>

    <TextView
            android:id="@+id/txtMyProfile"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/muli_semibold"
            android:textSize="@dimen/_14sdp"
            android:text="My Profile"/>
    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="@color/white"
          android:layout_marginTop="@dimen/_4sdp"/>


    <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/muli_semibold"
            android:textSize="@dimen/_14sdp"
            android:text="About Bezat"/>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/white"
          android:layout_marginTop="@dimen/_4sdp"/>

    <TextView
            android:id="@+id/tvNotification"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/muli_semibold"
            android:textSize="@dimen/_14sdp"
            android:text="Notification"/>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/white"
          android:layout_marginTop="@dimen/_4sdp"/>

    <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/muli_semibold"
            android:textSize="@dimen/_14sdp"
            android:text="My Scan History"/>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/white"
          android:layout_marginTop="@dimen/_4sdp"/>

    <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/muli_semibold"
            android:textSize="@dimen/_14sdp"
            android:text="Terms &amp; Condition"/>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/white"
          android:layout_marginTop="@dimen/_4sdp"/>

    <TextView
            android:id="@+id/tvContact"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/muli_semibold"
            android:textSize="@dimen/_14sdp"
            android:text="Contact Us"/>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/white"
          android:layout_marginTop="@dimen/_4sdp"/>

    <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/muli_semibold"
            android:textSize="@dimen/_14sdp"
            android:text="FAQ"/>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/white"
          android:layout_marginTop="@dimen/_4sdp"/>

    <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/muli_semibold"
            android:textSize="@dimen/_14sdp"
            android:text="Logout"/>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/white"
          android:layout_marginTop="@dimen/_4sdp"/>

    <TextView
            android:id="@+id/tvFavourite"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:fontFamily="@font/muli_semibold"
            android:drawablePadding="@dimen/_10sdp"
            android:textSize="@dimen/_14sdp"
            android:drawableStart="@drawable/ic_favorite_black_24dp"
            android:text="My Favourites"/>

    <TextView
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:fontFamily="@font/muli_semibold"
            android:drawablePadding="@dimen/_10sdp"
            android:textSize="@dimen/_14sdp"
            android:drawableStart="@drawable/ic_share_black_24dp"
            android:text="Share Bezat"/>
</LinearLayout>
