<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".activities.TotalCoupons">
    <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetEnd="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_28sdp"
                    android:src="@mipmap/ic_back"/>
            <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/muli_bold"
                    android:text="@string/change_language"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_28sdp"
                    android:visibility="invisible"
                    android:src="@mipmap/ic_back"/>

        </LinearLayout>
    </Toolbar>
    <LinearLayout
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whitegray"
            android:gravity="center_horizontal"
            android:padding="@dimen/_25sdp"
            android:orientation="vertical">


        <EditText
                android:id="@+id/etLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="English"
                android:fontFamily="@font/muli_semibold"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:backgroundTint="@color/colorPrimary"/>


        <LinearLayout
                android:id="@+id/layoutLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              android:elevation="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center_horizontal"
                android:orientation="vertical">
            <ImageButton
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_16sdp"

                    android:scaleType="fitXY"
                    android:background="@drawable/shape_bg_outgoing_bubble"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:backgroundTint="@color/white"

                    android:orientation="vertical"
                    android:background="@drawable/ripple_primary_white">

                <TextView
                        android:id="@+id/txtEnglish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="English"
                        android:padding="@dimen/_12sdp"
                        android:textColor="@color/black"/>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/cardview_shadow_start_color"/>
                <TextView
                        android:id="@+id/txtArabic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="عربى"
                        android:gravity="end"
                        android:padding="@dimen/_12sdp"
                        android:textColor="@color/black"/>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/cardview_shadow_start_color"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>